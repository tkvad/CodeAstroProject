from astroquery.simbad import Simbad
from astroquery.gaia import Gaia
import requests
import matplotlib.pyplot as plt
import os
import warnings
import pandas as pd
inport astopy as ap
def gaia_name(simbad_name):
    """ Purpose to get Gaia object ID for the star
    Argument is simbad_name which is a string: If the SIMBAD name of the star that we need to turn into a Gaia ID.
    Returns String: Returns the Gaia ID of the star or an empty string if Gaia ID doesn't exist for the object.
    """
    gaia_id = Simbad.query_objectids(simbad_name, cache=False)
    if gaia_id == None:
        print('Gaia ID not found for star')
        return ''
    else:
        return gaia_id
